<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        style="@style/TextAppearance.MaterialComponents.Headline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cantidad_de_dinero"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.100000024" />

    <TextView
        android:id="@+id/count_text_view"
        style="@style/TextAppearance.MaterialComponents.Headline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/medium_gap"
        android:text="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <ImageView
        android:id="@+id/five_image_view"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:layout_marginTop="@dimen/medium_gap"
        android:src="@drawable/five_cents"
        app:layout_constraintEnd_toStartOf="@+id/ten_image_view"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/count_text_view" />

    <ImageView
        android:id="@+id/ten_image_view"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:src="@drawable/ten_cents"
        app:layout_constraintBottom_toBottomOf="@+id/five_image_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/five_image_view"
        app:layout_constraintTop_toTopOf="@+id/five_image_view" />

    <TextView
        android:id="@+id/textView2"
        style="@style/TextAppearance.MaterialComponents.Headline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_gap"
        android:text="@string/five_cents"
        app:layout_constraintEnd_toEndOf="@+id/five_image_view"
        app:layout_constraintStart_toStartOf="@+id/five_image_view"
        app:layout_constraintTop_toBottomOf="@+id/five_image_view" />

    <TextView
        style="@style/TextAppearance.MaterialComponents.Headline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_gap"
        android:text="@string/ten_cents"
        app:layout_constraintEnd_toEndOf="@+id/ten_image_view"
        app:layout_constraintStart_toStartOf="@+id/ten_image_view"
        app:layout_constraintTop_toBottomOf="@+id/ten_image_view" />

    <ImageView
        android:id="@+id/quarter_image_view"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:layout_marginTop="32dp"
        android:src="@drawable/quarter"
        app:layout_constraintEnd_toStartOf="@+id/one_image_view"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <ImageView
        android:id="@+id/one_image_view"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:src="@drawable/one_dollar"
        app:layout_constraintBottom_toBottomOf="@+id/quarter_image_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/quarter_image_view"
        app:layout_constraintTop_toTopOf="@+id/quarter_image_view" />

    <TextView
        android:id="@+id/textView3"
        style="@style/TextAppearance.MaterialComponents.Headline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_gap"
        android:text="@string/quarter_cents"
        app:layout_constraintEnd_toEndOf="@+id/quarter_image_view"
        app:layout_constraintStart_toStartOf="@+id/quarter_image_view"
        app:layout_constraintTop_toBottomOf="@+id/quarter_image_view" />

    <TextView
        style="@style/TextAppearance.MaterialComponents.Headline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_gap"
        android:text="@string/one_dollar"
        app:layout_constraintEnd_toEndOf="@+id/one_image_view"
        app:layout_constraintStart_toStartOf="@+id/one_image_view"
        app:layout_constraintTop_toBottomOf="@+id/one_image_view" />


</androidx.constraintlayout.widget.ConstraintLayout>